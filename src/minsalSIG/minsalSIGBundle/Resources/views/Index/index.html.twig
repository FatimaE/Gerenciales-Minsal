<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SIGSS{% endblock %}</title>
        {% block stylesheets %}
			<link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>
			<link href="{{ asset('css/sigav.css') }}" type="text/css" rel="stylesheet"/>
			<!-- <link href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet"/> -->
			<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% endblock %}
    </head>
	
    <body class="body-login">
	
        {% block body %} 
			<div class="container">
                        <div class="centerDiv">                                                                                         
                        <img src="{{asset('images/encabezado.png')}}">
                        </div> 

                            <div class="panel panel-fondo">
                              <div class="panel-body">         
                            
                            
				{{ form_start(form, {'attr': {'class': 'form-login'}}) }}
				{{ form_errors(form) }}
				<div class="centerDiv">
					<img src="{{asset('images/contact.png')}}">
					<h2 class="form-login-heading text-center"><Strong>Bienvenido</Strong></h2>
				</div>
				<p>{{ form_widget(form.username) }}</p>
				{{ form_widget(form.password) }}
				
				{{ form_widget(form.ingresar) }}
				{{ form_rest(form) }}
				{{ form_end(form) }}
                              
                             </div>
                            </div> 
			</div>
		{% endblock %}
		
        {% block javascripts %}
			<script language="JavaScript" src ="{{asset('js/jquery-2.1.0.min.js')}}"> </script>
			<script language="JavaScript" src ="{{asset('bootstrap/js/bootstrap.min.js')}}"> </script>
		{% endblock %}
    </body>
	
</html>