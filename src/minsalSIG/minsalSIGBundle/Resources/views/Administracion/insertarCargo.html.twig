{% extends '::base.html.twig' %}
{% block body %}
<div class="container top">
	<div class="jumbotron">
		{% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}} ) }}
		{{ form_errors(form) }}
               
                <div class="form-group">
			<label for="rol" class="col-lg-3 control-label">Nombre del cargo</label>
			<div class="col-lg-4">
				{{ form_widget(form.nombreCargo) }}
			</div>
		</div>        
                
		<div class="form-group">
			<label for="username" class="col-lg-3 control-label">Descripcion del cargo</label>
			<div class="col-lg-4">
				{{ form_widget(form.descripcion) }}
			</div>
		</div>
		<br />
		<div class="col-lg-offset-1 col-lg-2">
			{{ form_widget(form.Guardar) }}
		</div>
                          
		<div class="col-lg-2">
			{{ form_widget(form.Limpiar) }}
		</div>
		
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
</div>
<div class="container top">
	<a href="{{ path('minsal_si_gminsal_sig_consultarCargo') }}">
		<button type="button" id="Regresar" name="Regresar" class="btn btn-lm btn-default">Regresar a consultar cargos</button>
	</a>
</div>
{% endblock %}
{% block js %}
	<script language="JavaScript" src ="{{asset('js/password_checker.js')}}"> </script>
{% endblock %}






