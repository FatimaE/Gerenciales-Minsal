{% extends '::base.html.twig' %}
{% block body %}
<div class="container top">
	<div class="jumbotron">
		{% for type, flashMessage in app.session.flashbag.all() %}
			<div class="alert alert-{{ type }} fade in">
				<button class="close" data-dismiss="alert" type="button">Ã—</button>
				{% if flashMessage.title is defined %}
				<strong>{{ flashMessage.title }}</strong>
				{{ flashMessage.message }}
				{% else %}
				{{ type }}
				{% endif %}
			</div>
		{% endfor %}
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}} ) }}
		{{ form_errors(form) }}
               
                <div class="form-group">
			<label for="rol" class="col-lg-3 control-label">Cargo del empleado</label>
			<div class="col-lg-4">
				{{ form_widget(form.idCargo) }}
			</div>
		</div>        
                
		<div class="form-group">
			<label for="primerNombre" class="col-lg-3 control-label">Nombres del empleado</label>
			<div class="col-lg-4">
				{{ form_widget(form.primerNombre) }}
			</div>
		</div>
                <div class="form-group">
			<label for="primerApellido" class="col-lg-3 control-label">Apellidos del empleado</label>
			<div class="col-lg-4">
				{{ form_widget(form.primerApellido) }}
			</div>
		</div>
                <div class="form-group">
			<label for="emailInstitucional" class="col-lg-3 control-label">Email del empleado</label>
			<div class="col-lg-4">
				{{ form_widget(form.emailInstitucional) }}
			</div>
		</div>
		<br />
		<div class="col-lg-offset-1 col-lg-2">
			{{ form_widget(form.Guardar) }}
		</div>
		<div class="col-lg-2">
			{{ form_widget(form.Limpiar) }}
		</div>
		
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
</div>
<div class="container top">
	<a href="{{ path('minsal_si_gminsal_sig_consultarEmpleado') }}">
		<button type="button" id="Regresar" name="Regresar" class="btn btn-lm btn-default">Regresar a consultar Empleados</button>
	</a>
</div>
{% endblock %}
{% block js %}
	<script language="JavaScript" src ="{{asset('js/password_checker.js')}}"> </script>
{% endblock %}