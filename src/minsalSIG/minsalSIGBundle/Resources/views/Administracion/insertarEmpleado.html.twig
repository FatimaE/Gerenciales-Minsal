{% extends '::base.html.twig' %}
{% block body %}
<div class="container top">
	<div class="jumbotron">
		{% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}} ) }}
		{{ form_errors(form) }}
               
                <div class="form-group">
                        <label for="cargo" class="col-lg-3 control-label">Nombre del cargo</label>
			<div class="col-lg-4">
				{{ form_widget(form.cargo) }}
			</div>
		</div>        
                
		<div class="form-group">
                        <label for="rol" class="col-lg-3 control-label">Nombre</label>
			<div class="col-lg-4">
				{{ form_widget(form.primerNombre) }}
			</div>
		</div>
                <div class="form-group">
                        <label for="rol" class="col-lg-3 control-label">Apellido</label>
			<div class="col-lg-4">
				{{ form_widget(form.primerApellido) }}
			</div>
		</div>
                <div class="form-group">
                        <label for="rol" class="col-lg-3 control-label">Email</label>
			<div class="col-lg-4">
				{{ form_widget(form.emailInstitucional) }}
			</div>
		</div>
		<br />
		<div class="col-lg-offset-1 col-lg-2">
			{{ form_widget(form.Guardar) }}
		</div>
		<div class="col-lg-2">
			{{ form_widget(form.Limpiar) }}
		</div>
		
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
</div>
<div class="container top">
	<a href="{{ path('minsal_si_gminsal_sig_consultarEmpleado') }}">
		<button type="button" id="Regresar" name="Regresar" class="btn btn-lm btn-default">Regresar a Consultar Empleados</button>
	</a>
</div>
{% endblock %}
{% block js %}
	<script language="JavaScript" src ="{{asset('js/password_checker.js')}}"> </script>
{% endblock %}