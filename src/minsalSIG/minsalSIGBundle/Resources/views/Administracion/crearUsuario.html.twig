{% extends '::base.html.twig' %}
{% block body %}
<div class="container top">
	<div class="jumbotron">
		{% for type, flashMessage in app.session.flashbag.all() %}
			<div class="alert alert-{{ type }} fade in">
				<button class="close" data-dismiss="alert" type="button">×</button>
				{% if flashMessage.title is defined %}
				<strong>{{ flashMessage.title }}</strong>
				{{ flashMessage.message }}
				{% else %}
				{{ type }}
				{% endif %}
			</div>
		{% endfor %}
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}} ) }}
		{{ form_errors(form) }}
		<div class="form-group">
			<label for="nombre" class="col-lg-3 control-label">Nombre del Usuario</label>
			<div class="col-lg-4">
				{{ form_widget(form.nombres) }}
			</div>
		</div>
		<div class="form-group">
			<label for="apellidos" class="col-lg-3 control-label">Apellidos del Usuario</label>
			<div class="col-lg-4">
				{{ form_widget(form.apellidos) }}
			</div>
		</div>
		<div class="form-group">
			<label for="rol" class="col-lg-3 control-label">Rol del Usuario</label>
			<div class="col-lg-4">
				{{ form_widget(form.rol) }}
			</div>
		</div>
		<div class="form-group">
			<label for="username" class="col-lg-3 control-label">Nombre de Usuario</label>
			<div class="col-lg-4">
				{{ form_widget(form.username) }}
			</div>
		</div>
		<div class="form-group">
			<label for="password" class="col-lg-3 control-label">Contraseña de Usuario</label>
			<div class="col-lg-4">
				{{ form_widget(form.password) }}
			</div>
		</div>
		<div class="form-group">
			<label for="passwordcheck" class="col-lg-3 control-label">Reescriba Contraseña de Usuario</label>
			<div class="col-lg-4">
				{{ form_widget(form.passwordcheck) }}
			</div>
		</div>
		<br />
		<div id="pass-info">
		</div>
		<br />
		<div class="col-lg-offset-1 col-lg-2">
			{{ form_widget(form.Guardar) }}
		</div>
		<div class="col-lg-2">
			{{ form_widget(form.Limpiar) }}
		</div>
		<div class="col-lg-2">
			<a href="{{ path('administracionadministracion_consultar_usuario') }}"> {{ form_widget(form.ConsultaUsuarios) }} </a>
		</div>
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
</div>
{% endblock %}
{% block js %}
	<script language="JavaScript" src ="{{asset('js/password_checker.js')}}"> </script>
{% endblock %}