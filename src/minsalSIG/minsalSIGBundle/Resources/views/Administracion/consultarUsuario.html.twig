{% extends '::base.html.twig' %}
{% block body %}
<div id="target">
</div>
<div class="container top">
	<div class="jumbotron">
		{% for type, flashMessage in app.session.flashbag.all() %}
			<div class="alert alert-{{ type }} fade in">
				<button class="close" data-dismiss="alert" type="button">×</button>
				{% if flashMessage.title is defined %}
				<strong>{{ flashMessage.title }}</strong>
				{{ flashMessage.message }}
				{% else %}
				{{ type }}
				{% endif %}
			</div>
		{% endfor %}
		<h3 class="text-center text-primary"> Consultar Usuarios </h3>
		<br />
		<div class="table-responsive">
			<table class="table table-striped table-hover table-condensed">
				<tbody>
					
					<tr class="success">
						<td class="table-header"> Nombres  </td>
						<td class="table-header"> Apellidos </td>
                                                <td class="table-header"> Tipo de usuario </td>
                                                <td class="table-header"> Nombre de Usuario </td>
						<td class="table-header"> Activo </d>
                                                <td class="table-header"> Acciones </d>
					</tr>
					{% for fos_user_user in users %}
						<tr>
                                                    	<td> {{ fos_user_user.idEmpleado.PrimerNombre }} </td>
                                                        <td> {{ fos_user_user.idEmpleado.PrimerApellido }} </td>
							<td> {{ fos_user_user.idRol.nombreRol }} </td>
							<td> {{ fos_user_user.username }} </td>
							<td> {{ fos_user_user.enabled }} </td>
							<td> 
                                                            
                                                            <a href="{{ url('minsal_si_gminsal_sig_ModificarUsuario', {'id': fos_user_user.id}) }}"> <img border='0' src="{{asset('images/update.png')}}" /> </a>
                                                            <a href="{{ url('minsal_si_gminsal_sig_EliminarUsuario', {'id': fos_user_user.id}) }}" onclick="return confirm('¿Seguro que desea continuar con la eliminación?')"> <img border='0' src="{{asset('images/delete.png')}}" /> </a>
							    
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="container top">
	{{ form_start(form) }}
	{{ form_errors(form) }}
        
	{{ form_end(form, {'render_rest': false}) }}
</div>
{% endblock %}