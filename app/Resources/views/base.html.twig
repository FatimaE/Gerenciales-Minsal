<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SIGSS{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>                
            <link href="{{ asset('css/sigav.css') }}" type="text/css" rel="stylesheet"/>
            <!-- <link href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet"/> -->
            <link rel="icon" type="image/x-icon" href="{{ asset('images/escudonacional.png') }}" />
        {% endblock %}    
    </head>
    <body>
        {% block header %}
            <div class="centerTable">
                <div class="table-responsive">
                        <table class="table-borderless" width="0%">
                                <tbody>
                                        <tr class="text-center">
                                                <td rowspan=2 width="20%">									
                                                </td>
                                                <td width="60%">
                                                        <img src="{{asset('images/encabezado.png')}}">
                                                </td>
                                                <td rowspan=2 width="25%">
                                                        <p class="text-center"> 
                                                                {{ app.session.get('nombre_usuario') }}
                                                                <br />
                                                                {{ app.session.get('nombre_rol') }}
                                                        </p>
                                                </td>
                                        </tr>							
                                </tbody>
                        </table>
                </div>
            </div>	
            <br />  
            <div class="container">	   
                <ol class="breadcrumb text-center">   
	             {% if app.session.get('id_rol') == 1 %}
			    <li><a href="{{url('minsal_si_gminsal_sig_consultarUsuario')}}">Usuarios</a></li> 
			    <li><a href="{{url('minsal_si_gminsal_sig_consultarCargo')}}">Cargos</a></li>
			    <li><a href="#">Empleados</a></li>                  
		     {% endif %}
		     {% if app.session.get('id_rol') == 2 %} 
			    <li><a href="#">Perfil</a></li>
			    <li><a href="{{url('minsal_si_gminsal_sig_cum')}}">Mejor CUM de Estudiantes</a></li>
			    <li><a href="{{url('minsal_si_gminsal_sig_pruebaCon')}}">Prueba de Conocimiento</a></li>
			    <li><a href="{{url('minsal_si_gminsal_sig_plazas')}}">Remunerados y Ad-Honorem</a></li>
			    <li><a href="{{url('minsal_si_gminsal_sig_aprobados')}}">Estudiantes Aprobados</a></li>
                            <li><a href="{{url('minsal_si_gminsal_sig_distribucion')}}">Distribución Estudiantes</a></li>
			    <li><a href="{{url('minsal_si_gminsal_sig_informefinal')}}">Informe final</a></li>					    
		     {% endif %}    
		     {% if app.session.get('id_rol') == 3 %} 
			     <li><a href="#">Perfil</a></li>
			     <li><a href="{{url('minsal_si_gminsal_sig_promPrueba')}}">Prueba de Conocimiento</a></li>
			     <li><a href="{{url('minsal_si_gminsal_sig_conplazas')}}">Consolidado de Plazas</a></li>
			     <li><a href="{{url('minsal_si_gminsal_sig_estudiantes')}}">Estudiantes Aptos para SS</a></li>
			     <li><a href="{{url('minsal_si_gminsal_sig_rangoNotas')}}">Rango de Notas</a></li>
			     <li><a href="{{url('minsal_si_gminsal_sig_montoTotal')}}">Monto Total de Plazas</a></li>				     
		    {% endif %}
		</ol>          
            </div>                                 
        {% endblock %}
		<br />
        
        {% block body %} {% endblock %}            
                            
        <br />
        <br />
        {% block footer %} 			
            <div class="container">
                <ol class="breadcrumb text-center"> 
                    <li><a href="{{url('minsal_si_gminsal_sig_cerrar')}}">Cerrar Sesión</a></li>  
                    <li><a href="#">Ayuda</a></li> 
                </ol>                      
            </div>			
        {% endblock %}   
        {% block javascripts %}
            <script language="JavaScript" src ="{{asset('bootstrap/js/bootstrap.js')}}"> </script> 
            <script language="JavaScript" src ="{{asset('js/jquery-2.1.0.min.js')}}"> </script>
        {% endblock %}
    </body>
</html>
